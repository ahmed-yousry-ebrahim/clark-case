source 'https://rubygems.org'


gem 'rails', '4.2.4'

gem 'rails-api'

gem 'spring', :group => :development

gem 'pg'

# To use Jbuilder templates for JSON
gem 'jbuilder'

# api versioning
gem 'versionist'

# authentication
gem 'devise_token_auth'


group :test do
  gem 'factory_girl_rails', '~> 4.0'
  gem 'rspec-rails'
  gem 'hashie'
end

group :production do
  gem 'rails_12factor'
end
